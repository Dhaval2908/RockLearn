<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Repositories List</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* TailwindCSS-inspired custom styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
        }

        .header {
            background-color: #1e40af; /* Blue header */
            color: white;
            padding: 16px;
            text-align: center;
        }

        .container {
            display: flex;
            max-width: 1200px;
            margin: 0 auto;
        }

        .sidebar {
            background-color: #f8fafc; /* Light grey background */
            padding: 16px;
            width: 200px;
            height: 100vh;
            border-right: 1px solid #e2e8f0;
        }

        .content-area {
            background-color: #fff;
            padding: 16px;
            width: calc(100% - 200px);
        }

        .repo-list {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 16px;
        }

        .repo-card {
            background-color: white;
            border-radius: 8px;
            padding: 16px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s; /* Animation effect on hover */
            cursor: pointer; /* Indicate that it's clickable */
        }

        .repo-card:hover {
            transform: scale(1.05); /* Scale effect on hover */
        }

        .repo-card h2 {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 8px;
            color: #2563eb; /* Change text color for repo title */
        }

        .repo-card p {
            font-size: 0.875rem;
            color: #6b7280;
            margin-bottom: 8px;
        }

        .repo-card span {
            color: #2563eb; /* Change text color for GitHub link */
        }

        /* Styles for Create Lab button and modal */
        .create-lab-btn {
            background-color: #1e40af;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-bottom: 20px;
        }

        .create-lab-btn:hover {
            background-color: #1d4ed8;
        }

    </style>
</head>
<body>

    <header class="header bg-blue-600 text-white p-4">
        <h1 class="text-4xl font-bold">GitHub Repositories</h1>
        <h2 class="text-2xl font-semibold">Top picks for <%= GITHUB_USERNAME %></h2>
    </header>

    <div class="container flex mt-4">
        <!-- Sidebar -->
        <div class="sidebar w-1/6 bg-gray-100 p-4">
            <ul class="space-y-4">
                <li class="cursor-pointer text-blue-600 font-bold hover:text-blue-800">Home</li>
            </ul>
        </div>

        <!-- Main Content Area -->
        <div class="content-area w-5/6 p-4">
            <h1 class="text-3xl font-bold mb-4">Repositories</h1>

            <!-- Create Lab Button -->
            <button class="create-lab-btn" onclick="document.getElementById('create-lab-form').style.display='block'">Create Lab</button>

            <!-- Create Lab Modal -->
            <div id="create-lab-form" style="display:none;">
                <form action="/home/create-lab" method="POST" enctype="multipart/form-data">
                    <label for="labName">Lab (Repository) Name:</label>
                    <input type="text" id="labName" name="labName" required><br><br>

                    <label for="folder">Select Folder to Upload:</label>
                    <input type="file" id="folder" name="folder" webkitdirectory directory multiple required><br><br>

                    <button type="submit">Create Lab</button>
                </form>
            </div>

            <!-- Repositories List -->
            <div class="repo-list grid grid-cols-3 gap-4">
                <% repoNames.forEach(repo => { %>
                    <div class="repo-card" onclick="location.href='/lab/<%= repo %>'">
                        <h2 class="text-xl font-bold mb-2"><%= repo %></h2>
                        <p class="text-gray-600 mb-4"><%= repo.description || 'No description provided' %></p>
                        <span>View on GitHub</span>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

</body>
</html>
