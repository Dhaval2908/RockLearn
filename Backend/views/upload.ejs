<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Lab</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8fafc; /* Tailwind light gray */
        }
        .container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            background: white
            /* 0, 0.1); */
        }
    </style>
</head>
<body>
    <header class="bg-blue-600 text-white py-4 text-center">
        <h1 class="text-2xl font-bold">Learning Center</h1>
        <p class="mt-2">Upload Your Lab Structure</p>
    </header>

    <main class="container mt-8">
        <form id="upload-form" action="/upload/api/labs" method="POST" enctype="multipart/form-data">
            <div class="mb-4">
                <label for="labName" class="block text-gray-700">Lab Name:</label>
                <input type="text" name="labName" id="labName" placeholder="Enter Lab Name" required
                       class="mt-1 block w-full p-2 border border-gray-300 rounded-md" />
            </div>
            <div class="mb-4">
                <label for="files" class="block text-gray-700">Upload Files:</label>
                <input type="file" name="files" id="files" webkitdirectory mozdirectory required multiple
                       class="mt-1 block w-full p-2 border border-gray-300 rounded-md" />
            </div>
            <div class="mb-4">
                <label for="branch" class="block text-gray-700">Branch Name:</label>
                <input type="text" name="branch" id="branch" placeholder="Enter Branch Name" required
                       class="mt-1 block w-full p-2 border border-gray-300 rounded-md" />
            </div>
            <input type="hidden" name="basePath" id="basePath" value=""/>

            <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">
                Upload Lab
            </button>
        </form>
    </main>

    <footer class="bg-blue-600 text-white py-4 text-center mt-8">
        <p>&copy; 2024 Learning Center. All rights reserved.</p>
    </footer>

    <script>
        document.getElementById('upload-form').addEventListener('submit', function(event) {
            const fileInput = document.getElementById('files');
            if (fileInput.files.length > 0) {
                // Get the directory name
                const firstFilePath = fileInput.files[0].webkitRelativePath;
                const basePath = firstFilePath.split('/')[0]; // Get the base folder name
                document.getElementById('basePath').value = basePath; // Set hidden field value
            }
        });
    </script>
</body>
</html>
